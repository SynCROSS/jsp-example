<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<%@ page import="java.sql.*"%>

<table border="1">
	<form action="action_insert.jsp" name="student_insert">
		<%
			try {
			Class.forName("oracle.jdbc.OracleDriver");
			Connection conn = DriverManager.getConnection("jdbc:oracle:thin:@//122.128.169.32:1521/xe", "smc_user_4", "1234");

			Statement stmt = conn.createStatement();
			String query = " SELECT " + " id " + " FROM " + " student ";
			ResultSet rs = stmt.executeQuery(query);
		%>
		<tr>
			<td>학생 id</td>
			<td><select name="student_id">
					<%
						while (rs.next()) {
					%>
					<option value="<%=rs.getInt(1)%>"><%=rs.getInt(1)%></option>
					<%
						}
					%>
			</select></td>
		</tr>
		<tr>
			<td>과목</td>
			<td><input type="text" name="subject"></td>
		</tr>
		<tr>
			<td>점수</td>
			<td><input type="number" name="point"></td>
		</tr>
		<tr>
			<td colspan="2"><input type="submit" value="Submit" onclick="form_submit()"> <input
				type="button" value="Reset" onclick="form_reset_value()"></td>
		</tr>
		<%
			stmt.close();
		conn.commit();
		conn.close();
		} catch (Exception e) {
		e.printStackTrace();
		}
		%>
	</form>
</table>

<script>
const form_submit = () => {
	  alert('submit!');
	  document.student_insert.submit();
	};
const form_reset_value = () => {
	  alert('reset!');
	  document.student_insert.reset();
	};

</script>